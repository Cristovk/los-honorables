{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true // Agrega esto
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
