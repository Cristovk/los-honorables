{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node", // Cambia a "NodeNext"
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "allowImportingTsExtensions": false // Cambia a false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
